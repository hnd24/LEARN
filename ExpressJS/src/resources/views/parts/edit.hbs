<div class='mt-4 mb-4'>
  <form method='POST' action='/parts/{{part.slug}}?_method=PUT'>
    <div class='form-group'>
      <label> Repair Name</label>
      <input
        type='text'
        class='form-control'
        value='{{part.name}}'
        name='name'
        placeholder='Enter name'
      />

    </div>
    <div class='form-group'>
      <label> Repair Tuoi</label>
      <input
        type='text'
        class='form-control'
        value={{part.tuoi}}
        name='tuoi'
        placeholder='Enter tuoi'
      />
    </div>
    <button type='submit' class='btn btn-primary'>Repair</button>
  </form>
</div>